%div{:id => "hangover_#{hangover_counter + 1}", :class => "slide"}
  - image = image_tag(hangover.image_url(:thumb).to_s)
  - if hangover.persisted?
    = link_to(image, hangover, :id => "hangover_#{hangover.id}")
  - else
    = image
  .caption
    %p
      = hangover.caption
      - if hangover.persisted?
        = link_to(I18n.t("hangover.rate_it"), votes_path(:voteable_id => hangover.id), :method => :post)

